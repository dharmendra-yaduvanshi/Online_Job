@{
    ViewData["Title"] = "Edit Resume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">Edit Your Resume</h2>

<form asp-controller="Job" asp-action="UploadResume" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="resumeFile" class="form-label">Upload New Resume</label>
        <input type="file" class="form-control" id="resumeFile" name="resumeFile" accept=".pdf,.doc,.docx" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload Resume</button>
</form>
