@model List<Online_Job.Models.Job>

@{
    ViewData["Title"] = "Job Portal";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var username = Context.Session.GetString("Username") ?? "Guest";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<!-- ✅ CSS Styles -->
<style>
    /* Hero Section */
    .search-section {
        background: linear-gradient(90deg, #38b2ac, #2d3748);
        padding: 40px;
        color: white;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .search-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 20px;
    }
    /* Sidebar Section */
    .sidebar {
        padding: 10px;
        border-radius: 12px;
        margin-right: 20px;
        margin-top: 80px;
        width: 300px;
        flex-shrink: 0;
    }
    /* Less rounded corners for Apply and Search buttons */
   /*  .btn-primary, .btn-outline-secondary {
        border-radius: 4px; /* Adjust as needed for a sharper look */
    } */


    /* Main Content Layout */
    .container.d-flex {
        display: flex;
        gap: 10px;
        flex-wrap: nowrap;
    }

    .flex-fill {
        flex-grow: 1;
    }

    /* Trusted Companies */
    .trusted-logo {
        height: 40px;
        margin: 10px 15px;
    }

    /* Job Categories */
    .categories-section {
        text-align: center;
        margin-bottom: 30px;
    }

    /* Job Card */
    .job-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin: 15px 0;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
        }

    .company-logo {
        height: 60px;
        margin-bottom: 10px;
    }

    .job-description {
        color: #555;
        font-size: 14px;
    }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }

    /* Pagination Styles */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

        .pagination .page-item.active .page-link {
            background-color: #e2e6ea;
            color: #495057;
            border-color: #dee2e6;
        }

        .pagination .page-link {
            color: #6c757d;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            margin: 0 2px;
            min-width: 40px;
            text-align: center;
        }

        .pagination .page-item.disabled .page-link {
            color: #c0c0c0;
        }

        .pagination .page-link:hover {
            background-color: #f8f9fa;
            color: #495057;
        }
    /* Badge Size */
    .badge {
        font-size: 1.2rem; /* Increase the font size */
        padding: 8px 12px; /* Increase padding for better visibility */
        border-radius: 8px; /* Slightly rounder corners */
    }
    /* Adjust input padding for icons */
    .form-control {
        padding-left: 2.5rem;
    }

    /* Style the icons */
    .position-absolute {
        color: #888;
        font-size: 1.2rem;
    }
    .search-bar {
    border: 1px solid #ddd;
    border-radius: 15px;
    background-color: #f8f9fa;
   

}


</style>

<!-- ✅ Hero Section with Search Form -->
<div class="container">
    <div class="search-section text-center">
        <h1>Over 10,000+ Jobs to Apply</h1>
        <p>Unlock Your Next Career Move Today – Discover Top Job Opportunities and Take
            <br />The First Step Toward a Brighter Future!</p>
        <form asp-controller="Jobs" asp-action="Search" method="get" class="search-bar d-flex flex-wrap justify-content-center p-2 shadow-sm rounded bg-white" style="width: 45%; margin: auto;">
            <!-- Job Title Input with Search Icon -->
            <div class="position-relative w-30 mx-1">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-2"></i>
                <input type="text" name="jobTitle" placeholder="Search for jobs" class="form-control form-control-sm ps-4">
            </div>

            <!-- Location Input with Location Icon -->
            <div class="position-relative w-30 mx-1">
                <i class="bi bi-geo-alt position-absolute top-50 start-0 translate-middle-y ms-2"></i>
                <input type="text" name="location" placeholder="Location" class="form-control form-control-sm ps-4">
            </div>

            <!-- Search Button -->
            <button type="submit" class="btn btn-primary btn-sm mx-1">Search</button>
        </form>


    </div>
</div>
<div class="card bg-light p-3 rounded-2">
    <div class="d-flex align-items-center justify-content-center gap-4">
        <span class="text-muted">Trusted by</span>
        <a href="https://www.microsoft.com" target="_blank">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQrM_1P2nzDRvGj1u7KthArXDJSVWWLMOSnJTCSQJMBUS08JA36zVXoeIgDqCte3HY71Q&usqp=CAU" alt="Microsoft" class="trusted-logo">
        </a>
        <a href="https://www.walmart.com" target="_blank">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRENYpBAINLaDDHo5VEv8-8MKyues1370ioeVzpzLVcZrRNY2epAuborGIAukhdHFN_ct4&usqp=CAU" alt="Walmart" class="trusted-logo">
        </a>
        <a href="https://www.accenture.com" target="_blank">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSfje0X8nYmc2uEShfYsdp6m3c3_Lc7_EjkvAYBMEYmfXBo1dpuQAziE0T44LrgMnlHk74&usqp=CAU" alt="Accenture" class="trusted-logo">
        </a>
    </div>
</div>

<!-- ✅ Main Content with Sidebar and Job Listings -->
<div class="container d-flex">
    <!-- Sidebar Section -->
    <div class="sidebar">
        <!-- Current Search -->
        <div class="mb-3">
            <h5>Current Search</h5>
            <div class="d-flex gap-2">
                <span class="badge bg-primary ​">full stack</span>
                <span class="badge bg-danger">bangalore</span>
            </div>
        </div>

        <!-- Search by Categories -->
        <div class="mb-3">
            <h5>Search by Categories</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <input type="checkbox" id="programming"> Programming (24)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="marketing"> Marketing (41)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="designing"> Designing (15)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="accounting"> Accounting (22)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="analytics"> Analytics (41)
                </li>
            </ul>
        </div>

        <!-- Search by Location -->
        <div>
            <h5>Search by Location</h5>
            <ul class="list-group">
                <li class="list-group-item">
                    <input type="checkbox" id="bangalore"> Bangalore (24)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="hyderabad"> Hyderabad (41)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="mumbai"> Mumbai (15)
                </li>
                <li class="list-group-item">
                    <input type="checkbox" id="chennai"> Chennai (22)
                </li>
            </ul>
        </div>
    </div>



<!-- ✅ Latest Jobs Section -->
<div class="container latest-jobs mt-5">
    <h2 class="text-right">Latest Jobs</h2>
    </<br />
    <h9 class="text-right">Get your desired job from top companies</h9>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var job in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="job-card">
                        <img src="@job.CompanyLogo" alt="@job.Title" class="company-logo">
                        <h3>@job.Title</h3>
                        <p><strong>@job.Location</strong> | @(job.Level ?? "Any") Level</p>
                        <p class="job-description">@job.Description</p>
                        <div class="button-group">
                            <form asp-action="Apply" method="get">
                                <input type="hidden" name="jobId" value="@job.Id" />
                                <button type="submit" class="btn btn-primary">Apply Now</button>
                            </form>
                            <a asp-controller="Jobs" asp-action="Learnmore" asp-route-id="@job.Id" class="btn btn-outline-secondary">Learn More</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ✅ Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">&laquo;</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">&raquo;</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p class="text-center mt-4">No jobs found.</p>
    }
</div>
