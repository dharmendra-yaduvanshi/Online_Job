@model List<Online_Job.Models.Job>

@{
    ViewData["Title"] = "Job Portal";
}

<!-- ✅ Top Navigation -->
<div class="container mt-3">
    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-primary mx-2" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-outline-success mx-2" asp-controller="Account" asp-action="RecruiterLogin">Recruiter Login</a>
    </div>
</div>

<!-- ✅ Hero Section with Search Form -->
<div class="container">
    <div class="search-section text-center">
        <h1>Over 10,000+ jobs to apply</h1>
        <p>Discover top job opportunities and take the first step toward a brighter future!</p>

        <form asp-controller="Job" asp-action="Search" method="get" class="search-bar d-flex flex-wrap justify-content-center">
            <input type="text" name="jobTitle" placeholder="Search for jobs" class="form-control w-25 mx-2">
            <input type="text" name="location" placeholder="Location" class="form-control w-25 mx-2">
            <button type="submit" class="btn btn-primary mx-2">Search</button>
        </form>
    </div>
</div>

<!-- ✅ Trusted Companies -->
<div class="container text-center mt-4">
    <p>Trusted by</p>
    <img src="~/img/microsoft.png" alt="Microsoft">
    <img src="~/img/walmart.png" alt="Walmart">
    <img src="~/img/accenture.png" alt="Accenture">
</div>

<!-- ✅ Job Categories -->
<div class="container text-center mt-4">
    <h3>Search by Categories</h3>
    <div class="d-flex flex-wrap justify-content-center">
        <button class="btn btn-outline-secondary m-2">Programming</button>
        <button class="btn btn-outline-secondary m-2">Marketing</button>
        <button class="btn btn-outline-secondary m-2">Analytics</button>
        <button class="btn btn-outline-secondary m-2">Design</button>
    </div>
</div>

<!-- ✅ Latest Jobs Section -->
<div class="container latest-jobs mt-5">
    <h2 class="text-center">Latest Jobs</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var job in Model.Take(6))
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="job-card">
                        <img src="@job.CompanyLogo" alt="@job.Title" class="company-logo">
                        <h3>@job.Title</h3>
                        <p><strong>@job.Location</strong> | @(job.Level ?? "Any") Level</p>
                        <p class="job-description">@job.Description</p>
                        <div class="button-group">
                            <button class="btn btn-primary">Apply Now</button>
                            <button class="btn btn-outline-secondary">Learn More</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-danger">No jobs available at the moment.</p>
    }
</div>

<!-- ✅ CSS Styles -->
<style>
    /* Hero Section */
    .search-section {
        background: linear-gradient(to right, #1e3c72, #2a5298);
        padding: 40px;
        color: white;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .search-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 20px;
    }

    /* Trusted Companies */
    .trusted-section img {
        height: 40px;
        margin: 10px 15px;
    }

    /* Categories */
    .categories-section {
        text-align: center;
        margin-bottom: 30px;
    }

    /* Job Card */
    .job-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
        text-align: center;
        margin: 15px 0;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 15px rgba(0,0,0,0.15);
        }

    .company-logo {
        height: 60px;
        margin-bottom: 10px;
    }

    .job-description {
        color: #555;
        font-size: 14px;
    }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 15px;
    }
</style>
