@model Online_Job.Models.Job

@{
    ViewData["Title"] = "Apply for " + Model.Title;
}

<!-- Job Title -->
<h1 class="text-center my-5">Apply for @Model.Title</h1>

<!-- Job Details -->
<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Level:</strong> @Model.Level</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
        <div class="col-md-6">
            <img src="@Model.CompanyLogo" alt="Company Logo" class="img-fluid rounded">
        </div>
    </div>
</div>

<!-- Application Form -->
<div class="container">
    <h3 class="mb-4">Submit Your Application</h3>

    <!-- Display success or error message if any -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form asp-action="SubmitApplication" method="post" enctype="multipart/form-data">
        <input type="hidden" name="JobId" value="@Model.Id" />

        <!-- Your Name -->
        <div class="form-group mb-3">
            <label for="userName" class="form-label">Your Name</label>
            <input type="text" id="userName" name="userName" class="form-control" required placeholder="Enter your full name" />
        </div>

        <!-- Cover Letter -->
        <div class="form-group mb-3">
            <label for="coverLetter" class="form-label">Cover Letter</label>
            <textarea id="coverLetter" name="coverLetter" class="form-control" rows="5" required placeholder="Write a cover letter for the job"></textarea>
        </div>

        <!-- File Upload (Resume) -->
        <div class="form-group mb-3">
            <label for="resume" class="form-label">Upload Resume</label>
            <input type="file" id="resume" name="resume" class="form-control" accept=".pdf,.docx,.txt" />
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Submit Application</button>
        </div>
    </form>
</div>

<!-- Styling for the form and job details -->
<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
    }

    h1 {
        color: #2C3E50;
        font-weight: bold;
    }

    .form-group label {
        font-size: 1.1rem;
        font-weight: bold;
        color: #34495E;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #BDC3C7;
        padding: 12px;
    }

    .btn-primary {
        background-color: #2980B9;
        border-color: #2980B9;
        padding: 10px 20px;
        font-size: 1.1rem;
    }

    .btn-primary:hover {
        background-color: #1A5276;
        border-color: #1A5276;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .alert {
        margin-top: 20px;
    }

    .text-center {
        text-align: center;
    }

    /* Responsive Design */
    media (max-width: 768px) {
        .container {
            padding-left: 10px;
            padding-right: 10px;
        }
    }
</style>

<!-- Optional JavaScript to enhance the user experience -->
<script>
    // Adding custom validation or enhancing form interactivity if needed
    document.querySelector('form').addEventListener('submit', function(e) {
        // Example: simple client-side validation (add more as needed)
        let userName = document.getElementById('userName').value.trim();
        if (userName.length < 3) {
            e.preventDefault();  // Prevent form submission
            alert('Please enter a valid name (at least 3 characters).');
        }
    });
</script>
