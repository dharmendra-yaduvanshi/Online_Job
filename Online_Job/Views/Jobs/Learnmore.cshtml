<style>
    .card {
        border-radius: 10px;
    }

        .card h4, .card h5, .card h6 {
            margin-bottom: 0.5rem;
        }

        .card p {
            margin-bottom: 0.5rem;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    ul {
        list-style-type: disc;
        margin-left: 1.5rem;
    }

    i {
        margin-right: 0.3rem;
    }

</style>
@model JobPortal.Models.Job

@{
    ViewData["Title"] = "Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Job Details Card -->
    <div class="card shadow-lg p-4 mb-4">
        <div class="d-flex align-items-center mb-3">
            <img src="~/images/company-logo.png" alt="Company Logo" class="rounded-circle me-3" style="width: 60px; height: 60px;">
            <div>
                <h2 class="fw-bold">@Model.Title</h2>
                <p class="text-muted">
                    <i class="bi bi-geo-alt-fill"></i> @Model.Location
                    <i class="bi bi-briefcase ms-3"></i> @Model.Level
                    <i class="bi bi-cash-coin ms-3"></i> CTC: @Model.CTC
                </p>
            </div>
            <div class="ms-auto">
                <button class="btn btn-primary btn-lg">Apply now</button>
                <p class="text-muted mt-2">Posted @Model.PostedDate.ToString("dd MMM, yyyy")</p>
            </div>
        </div>
    </div>

    <!-- Job Description -->
    <div class="card shadow-sm p-4 mb-4">
        <h4 class="fw-bold">Job description</h4>
        <p>@Model.Description</p>

        <h5 class="fw-bold mt-4">Key responsibilities</h5>
        <ul>
            @foreach (var responsibility in Model.Responsibilities)
            {
                <li>@responsibility</li>
            }
        </ul>

        <h5 class="fw-bold mt-4">Skills required</h5>
        <ul>
            @foreach (var skill in Model.Skills)
            {
                <li>@skill</li>
            }
        </ul>

        <button class="btn btn-primary btn-lg mt-3">Apply now</button>
    </div>

    <!-- More Jobs from Company -->
    <div class="card shadow-sm p-4">
        <h5 class="fw-bold">More jobs from @Model.CompanyName</h5>
        <div class="row">
            @foreach (var job in Model.RelatedJobs)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm p-3">
                        <h6 class="fw-bold">@job.Title</h6>
                        <p class="text-muted">
                            <i class="bi bi-geo-alt-fill"></i> @job.Location
                            <i class="bi bi-briefcase ms-2"></i> @job.Level
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="JobDetails" asp-route-id="@job.Id" class="btn btn-primary btn-sm">Apply now</a>
                            <a asp-action="JobDetails" asp-route-id="@job.Id" class="btn btn-secondary btn-sm">Learn more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
