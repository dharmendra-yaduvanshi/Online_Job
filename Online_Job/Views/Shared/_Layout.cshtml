<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_Job</title>

    <!-- Bootstrap CSS (you can choose between CDN or local files) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Optional Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Online_Job.styles.css" asp-append-version="true" />

    <style>
        /* Custom Sidebar Style */
        .sidebar {
            background-color: #2A52BE;
            padding: 20px;
        }

        .nav-link {
            padding: 10px;
            display: flex;
            align-items: center;
        }

            .nav-link i {
                margin-right: 10px;
            }
    </style>
</head>
<body>

    <!-- Header with Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Online_Job</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Jobs" asp-action="Index">Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                    </ul>

                    <!-- Login/Recruiter Login or Welcome -->
                    <div class="d-flex justify-content-end">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("Username")))
                        {
                            <!-- Show Login and Recruiter Login Links if not logged in -->
                            <a class="btn btn-outline-primary mx-2" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-outline-success mx-2" asp-controller="Account" asp-action="RecruiterLogin">Recruiter Login</a>
                        }
                        else
                        {
                            <!-- Display Username and Logout Option -->
                            <span class="nav-link">Welcome, @Context.Session.GetString("Username")</span>
                            <form method="post" asp-action="Logout" style="display: inline;">
                                <button type="submit" class="btn btn-outline-danger me-2">Logout</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Online_Job - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS and optional JS files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
