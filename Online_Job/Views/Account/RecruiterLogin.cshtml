@{
    ViewData["Title"] = "RecuiterLogin";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4" style="max-width: 400px; margin: 0 auto;">
        <h2 class="text-center mb-4 text-primary">Recuiter Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="mb-3">
                <label class="form-label fw-bold">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter your username" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div class="text-center mt-3">
            <p>Don't have an account?</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary w-100">Register</a>
        </div>
    </div>
</div>
