<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Online Job Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #007bff;
            font-size: 1.8rem;
            transition: color 0.3s ease;
        }

        .navbar-brand:hover {
            color: #0056b3;
        }

        .navbar-nav .nav-link {
            margin-right: 15px;
            color: #333;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #0056b3;
        }

        .btn-primary, .btn-danger {
            transition: all 0.2s ease-in-out;
            font-weight: bold;
            padding: 0.5rem 1.25rem;
            border-radius: 8px;
        }

        .btn-primary:hover, .btn-danger:hover {
            transform: scale(1.08);
        }

        .welcome-text {
            font-weight: bold;
            margin-right: 15px;
            color: #333;
        }

        body {
            background-color: #f4f7fc;
        }

        .container {
            margin-top: 30px;
        }

        /* Responsive styling */
        media (max-width: 768px) {
            .navbar-nav {
                text-align: center;
            }

            .welcome-text {
                margin-right: 0;
                display: block;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm p-3 mb-4">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Online Job Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("IsAuthenticated") == "true")
                    {
                        <li class="nav-item">
                            <span class="nav-link welcome-text">Welcome, @Context.Session.GetString("LoggedInUser")</span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-dark mx-2" href="@Url.Action("RecruiterLogin", "Account")">Recruiter Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success text-dark mx-2" href="@Url.Action("Login", "Account")">User Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- Bootstrap and JS scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
