@{
    ViewData["Title"] = "Manage Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Manage Jobs</h2>
        <a asp-controller="Dashboard" asp-action="AddJob" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Job
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover text-center">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Job Title</th>
                        <th>Company</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.Company</td>
                            <td>@job.Location</td>
                            <td>
                                <a asp-controller="Dashboard" asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Dashboard" asp-action="DeleteJob" asp-route-id="@job.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this job?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-exclamation-circle"></i> No job listings available.
            <a asp-controller="Dashboard" asp-action="AddJob" class="text-decoration-none fw-bold">Add a new job</a>.
        </div>
    }
</div>
