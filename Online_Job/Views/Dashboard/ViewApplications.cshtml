@model List<Online_Job.Models.ApplicationViewModel>

@{
    ViewData["Title"] = "View Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .resume-btn {
        background-color: #e6f0ff;
        color: #007bff;
        border: none;
        padding: 5px 12px;
        border-radius: 5px;
    }

    .resume-btn i {
        margin-left: 5px;
    }

    .dropdown-toggle::after {
        display: none !important;
    }

    .action-btn {
        background: none;
        border: none;
        font-size: 20px;
        color: #333;
        cursor: pointer;
    }

    .dropdown-menu a {
        font-size: 14px;
    }

    .dropdown-menu .text-danger {
        color: red !important;
    }

    .dropdown-menu {
        border-radius: 8px;
        padding: 5px 0;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .dropdown-item {
        padding: 8px 16px;
    }


</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 d-none d-md-block bg-primary text-white p-3">
            <partial name="_Sidebar" />
        </div>

        <!-- Main Content -->
        <div class="col-md-9 bg-light p-4">
           @*  <h3>View Applications</h3> *@
            <div class="table-responsive">
                <table class="table text-center bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th>#</th>
                            <th>User name</th>
                            <th>Job Title</th>
                            <th>Location</th>
                            <th>Resume</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            int count = 1;
                            foreach (var application in Model.Take(7))
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@application.ApplicantName</td>
                                    <td>@application.JobTitle</td>
                                    <td>@application.Location</td>
                                    <td>
                                        <a href="@application.ResumeUrl" class="resume-btn" download>
                                            Resume <i class="bi bi-download"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="action-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                &hellip;
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end text-start shadow-sm" style="min-width: 100px; left: auto; right: 0;">
                                                <li><a class="dropdown-item text-primary fw-semibold" href="#">Accept</a></li>
                                                <li><a class="dropdown-item text-danger fw-semibold" href="#">Reject</a></li>
                                            </ul>
                                        </div>


                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No applications found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
